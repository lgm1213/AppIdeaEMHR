<div class="max-w-5xl mx-auto">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <nav class="flex" aria-label="Breadcrumb">
        <ol role="list" class="flex items-center space-x-2">
          <li>
            <%= link_to "Patients", patients_path(slug: @current_organization.slug), 
              class: "text-sm font-medium text-gray-500 hover:text-gray-700" 
            %>
          </li>
          <li><span class="text-gray-400">/</span></li>
          <li class="text-sm font-medium text-gray-900"><%= @patient.full_name %></li>
        </ol>
      </nav>
      <h1 class="mt-2 text-3xl font-bold tracking-tight text-gray-900">Medical History</h1>
    </div>
    <%= link_to "New SOAP Note", new_patient_encounter_path(slug: @current_organization.slug, patient_id: @patient.id), 
      class: "rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" 
    %>
  </div>

  <div class="flow-root">
    <ul role="list" class="-mb-8">
      <% @encounters.each do |encounter| %>
        <li>
          <div class="relative pb-8">
            <span class="absolute left-4 top-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
            
            <div class="relative flex space-x-3">
              <div>
                <span class="h-8 w-8 rounded-full bg-blue-100 flex items-center justify-center ring-8 ring-white">
                  <svg class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="<%= icon_medical_history %>" />
                  </svg>
                </span>
              </div>
              
              <div class="flex min-w-0 flex-1 justify-between space-x-4 pt-1.5">
                <div class="w-full">
                  <div class="flex justify-between">
                    <p class="text-sm font-semibold text-gray-900">
                      Visit with <%= encounter.provider&.full_name || "Unknown Provider" %>
                    </p>
                    <p class="whitespace-nowrap text-sm text-gray-500">
                      <%= encounter.visit_date.strftime("%b %d, %Y") %>
                    </p>
                  </div>
                  
                  <div class="mt-2 bg-white border border-gray-200 rounded-md p-4 shadow-sm">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                      <div>
                        <span class="text-xs font-bold text-gray-500 uppercase">Assessment</span>
                        <p class="text-sm text-gray-900 mt-1"><%= simple_format(encounter.assessment) %></p>
                      </div>
                      <div>
                        <span class="text-xs font-bold text-gray-500 uppercase">Plan</span>
                        <p class="text-sm text-gray-900 mt-1"><%= simple_format(encounter.plan) %></p>
                      </div>
                    </div>
                    
                    <div class="mt-3 pt-3 border-t border-gray-100 flex gap-4">
                      <%= link_to "Edit Note", 
                        edit_encounter_path(
                          slug: @current_organization.slug, 
                          id: encounter.id
                        ), 
                        class: "text-xs font-medium text-indigo-600 hover:text-indigo-900" 
                      %>
                      <%= button_to "Delete", 
                        encounter_path(
                          slug: @current_organization.slug, 
                          id: encounter.id
                        ), 
                        method: :delete, 
                        form: {style: "display:inline"}, 
                        class: "text-xs font-medium text-red-600 hover:text-red-900 bg-transparent border-0 cursor-pointer p-0" 
                      %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
    <% if @encounters.empty? %>
      <p class="text-center text-gray-500 py-10 italic">No medical history found for this patient.</p>
    <% end %>
  </div>
</div>