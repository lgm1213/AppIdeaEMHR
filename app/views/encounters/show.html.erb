<% content_for :title, "Encounter Details" %>

<div class="max-w-5xl mx-auto px-4 py-8">
  
  <%# --- 1. Flash Messages --- %>
  <% if notice.present? %>
    <div class="rounded-md bg-green-50 p-4 mb-6 border border-green-200 shadow-sm animate-fade-in-down">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800"><%= notice %></p>
        </div>
      </div>
    </div>
  <% end %>

  <%# --- 2. Header Area --- %>
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="min-w-0 flex-1">
      <div class="flex items-center gap-3">
        <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
          Clinical Note
        </h2>
        
        <% if @encounter.finalized? %>
          <span class="inline-flex items-center rounded-full bg-green-100 px-3 py-0.5 text-sm font-medium text-green-800 ring-1 ring-inset ring-green-600/20">
            Finalized
          </span>
        <% else %>
          <span class="inline-flex items-center rounded-full bg-yellow-100 px-3 py-0.5 text-sm font-medium text-yellow-800 ring-1 ring-inset ring-yellow-600/20">
            Draft
          </span>
        <% end %>
      </div>
      
      <p class="mt-1 text-sm text-gray-500">
        <%= @encounter.provider.display_name %> • <%= @encounter.visit_date.strftime("%B %d, %Y") %>
      </p>
    </div>
    
    <%# --- 3. Action Buttons --- %>
    <div class="mt-4 flex flex-shrink-0 md:ml-4 md:mt-0 gap-3">
      <%= link_to "Back to Chart", patient_path(slug: @current_organization.slug, id: @encounter.patient.id, tab: 'clinical'), 
          class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" 
      %>

      <%= link_to superbill_encounter_path(slug: @current_organization.slug, id: @encounter.id), target: "_blank", class: "inline-flex items-center gap-x-1.5 rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
        <svg class="h-4 w-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        Superbill
      <% end %>

      <div class="relative inline-block text-left group">
        <button type="button" class="inline-flex items-center gap-x-1.5 rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
          <svg class="h-4 w-4 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          CMS-1500
          <svg class="-mr-1 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
          </svg>
        </button>
        <div class="hidden group-hover:block absolute right-0 z-10 mt-0 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none">
          <div class="py-1">
            <%= link_to hcfa_encounter_path(slug: @current_organization.slug, id: @encounter.id, mode: 'digital'), target: "_blank", class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
              <span class="font-bold block">Digital Copy</span>
              <span class="text-xs text-gray-500">Includes form background</span>
            <% end %>
            <%= link_to hcfa_encounter_path(slug: @current_organization.slug, id: @encounter.id, mode: 'print'), target: "_blank", class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
              <span class="font-bold block">Printer Copy</span>
              <span class="text-xs text-gray-500">Text only (For red forms)</span>
            <% end %>
          </div>
        </div>
      </div>

      <%= link_to edit_encounter_path(slug: @current_organization.slug, id: @encounter.id), 
          class: "inline-flex items-center rounded-md px-3 py-2 text-sm font-semibold text-white shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 #{ @encounter.finalized? ? 'bg-gray-600 hover:bg-gray-500' : 'bg-indigo-600 hover:bg-indigo-500' }" do %>
          
          <% if @encounter.finalized? %>
            Make Corrections
          <% else %>
            Continue Editing
          <% end %>
      <% end %>
    </div>
  </div>

  <%# --- 4. Clinical Data Summary --- %>
  <div class="bg-white shadow sm:rounded-lg border border-gray-200 overflow-hidden">
    
    <%# --- NEW: Vitals Display --- %>
    <% if @encounter.vital.present? %>
      <div class="bg-gray-50 px-6 py-4 border-b border-gray-200 grid grid-cols-2 md:grid-cols-6 gap-4">
        <div>
          <span class="block text-xs font-bold text-gray-500 uppercase">BP</span>
          <span class="text-sm font-medium text-gray-900">
            <%= @encounter.vital.bp_systolic.present? ? "#{@encounter.vital.bp_systolic}/#{@encounter.vital.bp_diastolic}" : "—" %>
          </span>
        </div>
        <div>
          <span class="block text-xs font-bold text-gray-500 uppercase">Pulse</span>
          <span class="text-sm font-medium text-gray-900"><%= @encounter.vital.heart_rate || "—" %> <span class="text-gray-500 text-xs">bpm</span></span>
        </div>
        <div>
          <span class="block text-xs font-bold text-gray-500 uppercase">Resp</span>
          <span class="text-sm font-medium text-gray-900"><%= @encounter.vital.resp_rate || "—" %></span>
        </div>
        <div>
          <span class="block text-xs font-bold text-gray-500 uppercase">Temp</span>
          <span class="text-sm font-medium text-gray-900"><%= @encounter.vital.temp_f || "—" %> <span class="text-gray-500 text-xs">°F</span></span>
        </div>
        <div>
          <span class="block text-xs font-bold text-gray-500 uppercase">O2 Sat</span>
          <span class="text-sm font-medium text-gray-900"><%= @encounter.vital.o2_sat ? "#{@encounter.vital.o2_sat}%" : "—" %></span>
        </div>
        <div>
          <span class="block text-xs font-bold text-gray-500 uppercase">BMI</span>
          <% bmi = @encounter.vital.bmi %>
          <% if bmi %>
            <% color_class = if bmi < 18.5
                               "text-blue-700 bg-blue-50"
                             elsif bmi >= 30
                               "text-red-700 bg-red-50"
                             elsif bmi >= 25
                               "text-yellow-700 bg-yellow-50"
                             else
                               "text-gray-900 bg-gray-100"
                             end %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= color_class %>">
              <%= bmi %>
            </span>
          <% else %>
            <span class="text-sm text-gray-500">—</span>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 md:grid-cols-2 divide-y md:divide-y-0 md:divide-x border-b border-gray-200">
      <div class="p-6">
        <h3 class="text-xs font-bold text-gray-500 uppercase tracking-wide mb-3">Subjective</h3>
        <div class="prose prose-sm text-gray-900 max-w-none">
          <%= simple_format(@encounter.subjective.presence || "No subjective notes recorded.") %>
        </div>
      </div>
      <div class="p-6">
        <h3 class="text-xs font-bold text-gray-500 uppercase tracking-wide mb-3">Objective</h3>
        <div class="prose prose-sm text-gray-900 max-w-none">
          <%= simple_format(@encounter.objective.presence || "No objective notes recorded.") %>
        </div>
      </div>
    </div>

    <div class="p-6 bg-gray-50">
      <h3 class="text-xs font-bold text-gray-500 uppercase tracking-wide mb-4">Assessment & Plan</h3>
      
      <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Charge / Info</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @encounter.encounter_diagnoses.each do |dx| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Diagnosis</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900"><%= dx.icd_code %></td>
                <td class="px-6 py-4 text-sm text-gray-500"><%= dx.description %></td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-500">—</td>
              </tr>
            <% end %>

            <% @encounter.encounter_procedures.each do |proc| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Procedure</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900"><%= proc.procedure.code %></td>
                <td class="px-6 py-4 text-sm text-gray-500">
                  <%= proc.procedure.name %>
                  <% if proc.modifiers.present? %>
                    <span class="ml-2 inline-flex items-center rounded-md bg-gray-100 px-2 py-1 text-xs font-medium text-gray-600">
                      Mods: <%= proc.modifiers %>
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-mono font-medium text-gray-900">
                  <%= number_to_currency(proc.charge_amount) %>
                </td>
              </tr>
            <% end %>

            <% if @encounter.encounter_diagnoses.empty? && @encounter.encounter_procedures.empty? %>
              <tr>
                <td colspan="4" class="px-6 py-8 text-center text-sm text-gray-400 italic">
                  No codes or procedures added yet.
                </td>
              </tr>
            <% end %>
          </tbody>
          
          <tfoot class="bg-gray-50">
            <tr>
              <td colspan="3" class="px-6 py-3 text-right text-sm font-bold text-gray-900">Total Charges:</td>
              <td class="px-6 py-3 text-right text-sm font-bold text-indigo-600 font-mono">
                <%= number_to_currency(@encounter.encounter_procedures.sum(:charge_amount)) %>
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>

  <%# --- 5. Delete Action --- %>
  <div class="mt-8 pt-6 border-t border-gray-100 flex justify-end">
    <%= button_to "Delete Entry", encounter_path(slug: @current_organization.slug, id: @encounter.id), 
        method: :delete, 
        class: "text-sm text-red-600 hover:text-red-800 font-medium cursor-pointer bg-transparent border-0",
        data: { turbo_confirm: "Are you sure? This cannot be undone." } 
    %>
  </div>

</div>