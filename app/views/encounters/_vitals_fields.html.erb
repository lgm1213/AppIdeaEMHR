<%# app/views/encounters/_vitals_fields.html.erb %>

<div class="bg-gray-50 p-4 rounded-lg border border-gray-200 mb-6" data-controller="bmi">
  <h3 class="text-sm font-bold text-gray-700 uppercase tracking-wide mb-3 flex items-center">
    <svg class="w-4 h-4 mr-1 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>
    Vitals
  </h3>

  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <div class="col-span-1">
      <label class="block text-xs font-medium text-gray-500">BP (mmHg)</label>
      <div class="flex items-center space-x-1">
        <%= f.number_field :bp_systolic, placeholder: "120", class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        <span class="text-gray-400">/</span>
        <%= f.number_field :bp_diastolic, placeholder: "80", class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
    </div>

    <div>
      <label class="block text-xs font-medium text-gray-500">Pulse (bpm)</label>
      <%= f.number_field :heart_rate, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <label class="block text-xs font-medium text-gray-500">Resp. Rate</label>
      <%= f.number_field :resp_rate, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <label class="block text-xs font-medium text-gray-500">Temp (Â°F)</label>
      <%= f.number_field :temp_f, step: "0.1", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
    
    <div>
      <label class="block text-xs font-medium text-gray-500">O2 Sat (%)</label>
      <%= f.number_field :o2_sat, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <label class="block text-xs font-medium text-gray-500">Height (in)</label>
      <%= f.number_field :height_inches, 
          step: "0.5", 
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
          data: { 
            bmi_target: "height",
            action: "input->bmi#calculate" 
          } 
      %>
    </div>

    <div>
      <label class="block text-xs font-medium text-gray-500">Weight (lbs)</label>
      <%= f.number_field :weight_lbs, 
          step: "0.1", 
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
          data: { 
            bmi_target: "weight",
            action: "input->bmi#calculate" 
          } 
      %>
    </div>

    <div>
      <label class="block text-xs font-medium text-gray-500">BMI</label>
      <div data-bmi-target="output" 
           class="mt-1 px-3 py-2 bg-gray-100 border border-gray-200 rounded-md text-gray-600 sm:text-sm transition-colors duration-300">
        <%= f.object.bmi || "--" %>
      </div>
      
      <%= f.hidden_field :bmi %>
    </div>
  </div>
</div>