<div class="max-w-2xl mx-auto">
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900">Edit Practice</h2>
      <p class="mt-1 text-sm text-gray-500">Updating settings for <span class="font-semibold text-gray-700"><%= @organization.name %></span></p>
    </div>
  </div>

  <%= form_with(model: [:admin, @organization], class: "bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2") do |form| %>
    
    <% if @organization.errors.any? %>
      <div class="p-4 rounded-t-xl bg-red-50 border-b border-red-100">
        <ul class="list-disc pl-5 text-sm text-red-600">
          <% @organization.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="px-4 py-6 sm:p-8 space-y-6">
    	<div>
        <%= form.label :name, "Practice Name", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= form.text_field :name, 
            class: %w[
            	block w-full rounded-md border-0 py-1.5 
							text-gray-900 shadow-sm 
							ring-1 ring-inset ring-gray-300 
							placeholder:text-gray-400 
							focus:ring-2 focus:ring-inset focus:ring-indigo-600 
							sm:text-sm sm:leading-6
            ].join(" ")
        	%>
        </div>
      </div>
      <div>
        <%= form.label :slug, "URL Slug", 
					class: "block text-sm font-medium leading-6 text-gray-900" 
				%>
        <div class="mt-2">
          <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
            <span class="flex select-none items-center pl-3 text-gray-500 sm:text-sm">/</span>
            <%= form.text_field :slug, 
							class: "block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" 
						%>
          </div>
          <p class="mt-1 text-xs text-yellow-600">
            <strong>Warning:</strong> Changing this will break existing bookmarks for this practice.
          </p>
        </div>
      </div>

      <div>
        <%= form.label :plan, "Subscription Plan", class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= form.select :plan, 
            options_for_select(
              [
                ['Free / Trial', 'free'], 
                ['Standard', 'standard'], 
                ['Enterprise', 'enterprise']
              ], 
              @organization.plan
            ), 
            { prompt: "Select Plan" }, 
            class: %w[
              block w-full rounded-md border-0 py-1.5 text-gray-900 
              shadow-sm ring-1 ring-inset ring-gray-300 
              focus:ring-2 focus:ring-inset focus:ring-indigo-600 
              sm:text-sm sm:leading-6
            ].join(" ")
          %>
        </div>
      </div>

    </div>

    <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 px-4 py-4 sm:px-8">
      <%= link_to "Cancel", admin_organization_path(@organization), 
        class: "text-sm font-semibold leading-6 text-gray-900" 
      %>
      <%= form.submit "Update Organization", 
        class: %w[
          rounded-md bg-indigo-600 px-3 py-2 
          text-sm font-semibold text-white shadow-sm 
          hover:bg-indigo-500 
          focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600
        ].join(" ")
      %>
    </div>
  <% end %>
</div>