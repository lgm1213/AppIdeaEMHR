<div class="max-w-2xl mx-auto">
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900">Edit User</h2>
      <p class="mt-1 text-sm text-gray-500">Updating profile for <span class="font-semibold text-gray-700"><%= @user.full_name %></span></p>
    </div>
  </div>

  <%= form_with(model: [:admin, @user], class: "bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2") do |form| %>
    
    <% if @user.errors.any? %>
      <div class="p-4 rounded-t-xl bg-red-50 border-b border-red-100">
        <ul class="list-disc pl-5 text-sm text-red-600">
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="px-4 py-6 sm:p-8 space-y-6">
      
      <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="sm:col-span-3">
          <%= form.label :first_name, 
						class: "block text-sm font-medium leading-6 text-gray-900" 
					%>
          <div class="mt-2">
            <%= form.text_field :first_name, 
              class: %w[
								block w-full rounded-md border-0 py-1.5 
								text-gray-900 shadow-sm 
								ring-1 ring-inset ring-gray-300 
								focus:ring-2 focus:ring-inset focus:ring-indigo-600 
								sm:text-sm sm:leading-6
							].join(" ") 
            %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :last_name, 
						class: "block text-sm font-medium leading-6 text-gray-900" 
					%>
          <div class="mt-2">
            <%= form.text_field :last_name, 
              class: %w[
								block w-full rounded-md border-0 py-1.5 
								text-gray-900 shadow-sm 
								ring-1 ring-inset ring-gray-300 
								focus:ring-2 focus:ring-inset focus:ring-indigo-600 
								sm:text-sm sm:leading-6
							].join(" ") 
            %>
          </div>
        </div>
      </div>

      <div>
        <%= form.label :email_address, 
					class: "block text-sm font-medium leading-6 text-gray-900" 
				%>
        <div class="mt-2">
          <%= form.email_field :email_address, 
						class: %w[
							block w-full rounded-md border-0 py-1.5 
							text-gray-900 shadow-sm 
							ring-1 ring-inset ring-gray-300 
							placeholder:text-gray-400 
							focus:ring-2 focus:ring-inset focus:ring-indigo-600 
							sm:text-sm sm:leading-6
						].join(" ") 
					%>
        </div>
      </div>

      <div>
        <%= form.label :role, "System Role", 
					class: "block text-sm font-medium leading-6 text-gray-900" 
				%>
        <div class="mt-2">
          <% if @user.superadmin? %>
            <div class="block w-full rounded-md border-0 py-1.5 text-gray-500 bg-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 sm:text-sm sm:leading-6 px-3">
              Super Administrator (System Level)
            </div>
            <p class="mt-1 text-xs text-yellow-600">
              <span class="font-medium">Notice:</span> This user is a System Admin. Role changes are disabled to prevent lockout.
            </p>
          <% else %>
            <%= form.select :role, 
                options_for_select([
                  ['Admin (Practice Manager)', 'admin'], 
                  ['Provider (Doctor)', 'provider'], 
                  ['Staff (Nurse/Front Desk)', 'staff']
                ], @user.role), 
                { prompt: "Select Role" }, 
                class: %w[
									block w-full rounded-md border-0 py-1.5 
									text-gray-900 shadow-sm 
									ring-1 ring-inset ring-gray-300 
									focus:ring-2 focus:ring-inset focus:ring-indigo-600 
									sm:text-sm sm:leading-6
								].join(" ") 
            %>
          <% end %>
        </div>
      </div>

      <div class="border-t border-gray-100 pt-6">
        <h3 class="text-sm font-medium text-gray-900 mb-2">Change Password (Optional)</h3>
        <p class="text-xs text-gray-500 mb-4">Leave blank to keep the current password.</p>
        
        <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
          <div class="sm:col-span-3">
            <%= form.label :password, "New Password", 
							class: "block text-sm font-medium leading-6 text-gray-900" 
						%>
            <div class="mt-2">
              <%= form.password_field :password, 
								class: %w[
									block w-full rounded-md border-0 py-1.5 
									text-gray-900 shadow-sm 
									ring-1 ring-inset ring-gray-300 
									focus:ring-2 focus:ring-inset focus:ring-indigo-600 
									sm:text-sm sm:leading-6
								].join(" ") 
              %>
            </div>
          </div>

          <div class="sm:col-span-3">
            <%= form.label :password_confirmation, "Confirm Password", 
							class: "block text-sm font-medium leading-6 text-gray-900" 
						%>
            <div class="mt-2">
              <%= form.password_field :password_confirmation, 
								class: %w[
									block w-full rounded-md border-0 py-1.5 
									text-gray-900 shadow-sm 
									ring-1 ring-inset ring-gray-300 
									focus:ring-2 focus:ring-inset focus:ring-indigo-600 
									sm:text-sm sm:leading-6
								].join(" ") 
              %>
            </div>
          </div>
        </div>
      </div>

    </div>

    <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 px-4 py-4 sm:px-8">
      <%= link_to "Cancel", admin_user_path(@user), 
				class: "text-sm font-semibold leading-6 text-gray-900" 
			%>
      <%= form.submit "Update User", 
				class: %w[
					rounded-md bg-indigo-600 px-3 py-2 
					text-sm font-semibold text-white shadow-sm 
					hover:bg-indigo-500 
					focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600
				].join(" ") 
			%>
    </div>
  <% end %>
</div>