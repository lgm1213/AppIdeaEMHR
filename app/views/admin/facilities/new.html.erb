<div class="max-w-2xl mx-auto">
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900">Add Facility</h2>
      <p class="mt-1 text-sm text-gray-500">Adding a new location for <span class="font-semibold text-gray-700"><%= @organization.name %></span></p>
    </div>
  </div>

  <%= form_with(model: [:admin, @organization, @facility], class: "bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2") do |form| %>
    
    <% if @facility.errors.any? %>
      <div class="p-4 rounded-t-xl bg-red-50 border-b border-red-100">
        <ul class="list-disc pl-5 text-sm text-red-600">
          <% @facility.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="px-4 py-6 sm:p-8 space-y-6">
      
      <div>
        <%= form.label :name, "Facility Name", 
          class: "block text-sm font-medium leading-6 text-gray-900" 
        %>
        <div class="mt-2">
          <%= form.text_field :name, 
            class: %w[
              block w-full rounded-md border-0 py-1.5 
              text-gray-900 shadow-sm 
              ring-1 ring-inset ring-gray-300 
              placeholder:text-gray-400 
              focus:ring-2 focus:ring-inset focus:ring-indigo-600 
              sm:text-sm sm:leading-6
            ].join(" "), 
            placeholder: "e.g. Main Street Clinic" 
          %>
        </div>
      </div>

      <div>
        <%= form.label :address, "Street Address", 
          class: "block text-sm font-medium leading-6 text-gray-900" 
        %>
        <div class="mt-2">
          <%= form.text_field :address, 
            class: %w[
              block w-full rounded-md border-0 py-1.5 
              text-gray-900 shadow-sm 
              ring-1 ring-inset ring-gray-300 
              placeholder:text-gray-400 
              focus:ring-2 focus:ring-inset focus:ring-indigo-600 
              sm:text-sm sm:leading-6
            ].join(" "), 
            placeholder: "e.g. 123 Main St."
          %>
        </div>
      </div>

      <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        
        <div class="sm:col-span-3">
          <%= form.label :city, 
            class: "block text-sm font-medium leading-6 text-gray-900"
          %>
          <div class="mt-2">
            <%= form.text_field :city, 
              class: %w[
                block w-full rounded-md border-0 py-1.5 
                text-gray-900 shadow-sm 
                ring-1 ring-inset ring-gray-300 
                focus:ring-2 focus:ring-inset focus:ring-indigo-600 
                sm:text-sm sm:leading-6
              ].join(" ") 
            %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :state, 
            class: "block text-sm font-medium leading-6 text-gray-900" 
          %>
          <div class="mt-2">
            <%= form.text_field :state, 
              class: %w[
                block w-full rounded-md border-0 py-1.5 
                text-gray-900 shadow-sm 
                ring-1 ring-inset ring-gray-300
                focus:ring-2 focus:ring-inset focus:ring-indigo-600 
                sm:text-sm sm:leading-6
              ].join(" ")
            %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :zip_code, "Zip Code",
            class: "block text-sm font-medium leading-6 text-gray-900" 
          %>
          <div class="mt-2">
            <%= form.text_field :zip_code, 
              class: %w[
                block w-full rounded-md border-0 py-1.5 
                text-gray-900 shadow-sm 
                ring-1 ring-inset ring-gray-300
                focus:ring-2 focus:ring-inset focus:ring-indigo-600 
                sm:text-sm sm:leading-6
              ].join(" ")
            %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :phone, "Phone Number",
            class: "block text-sm font-medium leading-6 text-gray-900" 
          %>
          <div class="mt-2">
            <%= form.text_field :phone, 
              class: %w[
                block w-full rounded-md border-0 py-1.5 
                text-gray-900 shadow-sm 
                ring-1 ring-inset ring-gray-300
                focus:ring-2 focus:ring-inset focus:ring-indigo-600 
                sm:text-sm sm:leading-6
              ].join(" "),
              placeholder: "(555) 555-5555"
            %>
          </div>
        </div>

      </div>
    </div>

    <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 px-4 py-4 sm:px-8">
      <%= link_to "Cancel", admin_organization_path(@organization), class: "text-sm font-semibold leading-6 text-gray-900" %>
      <%= form.submit "Save Facility", 
        class: %w[
          rounded-md bg-indigo-600 px-3 py-2 
          text-sm font-semibold text-white shadow-sm 
          hover:bg-indigo-500 
          focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600
        ].join(" ")
      %>
    </div>
  <% end %>
</div>