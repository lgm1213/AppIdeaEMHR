<turbo-frame id="message_preview" class="flex flex-col h-full bg-white">
  
  <div class="px-6 py-5 border-b border-gray-200 bg-white sticky top-0 z-10 flex justify-between items-start">
    <div class="flex-1 min-w-0">
      <h1 class="text-xl font-bold text-gray-900 truncate mb-1"><%= @message.subject %></h1>
      
      <div class="flex items-center gap-2 text-sm text-gray-500">
        <span class="font-medium text-gray-900"><%= @message.sender.full_name %></span>
        <span>to <%= @message.recipient == Current.user ? "me" : @message.recipient.first_name %></span>
        <span class="mx-1">&bull;</span>
        <span><%= @message.created_at.in_time_zone.strftime("%b %d, %l:%M %p") %></span>
        
        <% if @message.attachments.attached? %>
          <span class="mx-1">&bull;</span>
          <span class="inline-flex items-center gap-1 text-gray-600">
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13" />
            </svg>
            <span class="text-xs font-medium"><%= @message.attachments.count %> File<%= 's' if @message.attachments.count > 1 %></span>
          </span>
        <% end %>
      </div>

      <% if @message.patient %>
        <div class="mt-3 flex items-center gap-2">
          <span class="text-xs font-semibold text-gray-500 uppercase tracking-wide">Patient Context:</span>
          <%= link_to @message.patient.full_name, patient_path(slug: @current_organization.slug, id: @message.patient.id), 
              class: "inline-flex items-center px-2 py-1 rounded-md bg-indigo-50 text-indigo-700 text-xs font-medium border border-indigo-100 hover:bg-indigo-100",
              data: { turbo: false } 
          %>
        </div>
      <% end %>
    </div>

    <div class="flex gap-2">
       <%= link_to new_message_path(slug: @current_organization.slug, reply_to_id: @message.id), 
           class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50",
           data: { turbo_frame: "message_preview" } do %>
         <svg class="-ml-1 mr-2 h-4 w-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6" /></svg>
         Reply
       <% end %>
    </div>
  </div>

  <div class="flex-1 overflow-y-auto p-6 bg-white">
    
    <div class="prose prose-sm max-w-none text-gray-800 mb-8">
      <%= simple_format @message.body %>
    </div>

    <% if @message.attachments.attached? %>
      <div class="border-t border-gray-100 pt-6">
        <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3">Attachments (<%= @message.attachments.count %>)</h4>
        
        <ul role="list" class="grid grid-cols-1 gap-3 sm:grid-cols-2">
          <% @message.attachments.each do |file| %>
            <li class="col-span-1 flex rounded-md shadow-sm border border-gray-200 bg-gray-50 hover:bg-white transition">
              <div class="flex-shrink-0 flex items-center justify-center w-12 text-gray-400 bg-gray-100 border-r border-gray-200">
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              
              <div class="flex flex-1 items-center justify-between truncate pr-4 pl-3 py-2">
                <div class="flex-1 truncate mr-2">
                  <span class="text-sm font-medium text-gray-900 hover:text-gray-600 truncate block">
                    <%= file.filename %>
                  </span>
                  <span class="text-xs text-gray-500"><%= number_to_human_size(file.byte_size) %></span>
                </div>
                
                <div class="flex-shrink-0">
                  <%= link_to rails_blob_path(file, disposition: "attachment"), class: "font-medium text-indigo-600 hover:text-indigo-500 text-sm", target: "_blank" do %>
                    Download
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    </div>

</turbo-frame>