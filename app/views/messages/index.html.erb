<% content_for :title, "Inbox" %>

<div class="flex h-[calc(100vh-140px)] bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
  
  <div class="w-1/3 border-r border-gray-200 flex flex-col bg-gray-50">
    
    <div class="p-3 border-b border-gray-200 flex justify-between items-center bg-white sticky top-0 z-10">
      <div class="flex gap-2">
        <%= link_to "Inbox", messages_path(slug: @current_organization.slug), 
            class: "px-3 py-1 text-xs font-medium rounded-full #{current_page?(action: 'sent') ? 'bg-gray-100 text-gray-600 hover:bg-gray-200' : 'bg-indigo-100 text-indigo-700'}" 
        %>
        <%= link_to "Sent", sent_messages_path(slug: @current_organization.slug), 
            class: "px-3 py-1 text-xs font-medium rounded-full #{current_page?(action: 'sent') ? 'bg-indigo-100 text-indigo-700' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'}" 
        %>
      </div>
      <%= link_to new_message_path(slug: @current_organization.slug), 
          class: "text-indigo-600 hover:text-indigo-500",
          data: { turbo_frame: "message_preview" } do %> 
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
      <% end %>
    </div>

    <div class="flex-1 overflow-y-auto divide-y divide-gray-200">
      <% @messages.each do |msg| %>
        <%= link_to message_path(slug: @current_organization.slug, id: msg.id), 
            data: { turbo_frame: "message_preview" }, # <-- MAGIC: Loads into the right pane
            class: "block hover:bg-white transition group #{msg.read_at ? 'opacity-75' : 'bg-white'}" do %>
          
          <div class="p-4 relative <%= 'bg-blue-50/50' unless msg.read_at %> group-hover:bg-blue-50 transition border-l-4 <%= msg.read_at ? 'border-transparent' : 'border-indigo-500' %>">
            
            <div class="flex justify-between items-baseline mb-1">
              <span class="text-sm font-semibold text-gray-900 truncate pr-2">
                <%= current_page?(action: 'sent') ? "To: #{msg.recipient.first_name}" : msg.sender.full_name %>
              </span>
              
              <div class="flex items-center gap-1 text-xs text-gray-500 flex-shrink-0">
                <% if msg.attachments.attached? %>
                  <svg class="h-3 w-3 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13" />
                  </svg>
                <% end %>
                
                <% if msg.created_at > 1.day.ago %>
                  <%= msg.created_at.in_time_zone.strftime("%l:%M %p") %>
                <% else %>
                  <%= msg.created_at.in_time_zone.strftime("%b %d") %>
                <% end %>
              </div>
            </div>

            <p class="text-sm font-medium text-gray-800 truncate mb-0.5"><%= msg.subject %></p>
            <p class="text-xs text-gray-500 truncate"><%= msg.body %></p>

            <% if msg.patient %>
              <div class="mt-2 inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-gray-200 text-gray-800">
                <svg class="mr-1 h-3 w-3 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                <%= msg.patient.last_name %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>

      <% if @messages.empty? %>
        <div class="p-8 text-center text-sm text-gray-500">No messages.</div>
      <% end %>
    </div>
  </div>

  <div class="w-2/3 bg-white flex flex-col h-full">
    <turbo-frame id="message_preview" class="h-full w-full flex flex-col" target="_top">
      
      <div class="flex-1 flex flex-col items-center justify-center text-gray-400 h-full">
        <svg class="h-16 w-16 mb-4 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        <p class="text-lg font-medium">Select a message to read</p>
      </div>

    </turbo-frame>
  </div>
</div>