<div id="<%= dom_id appointment %>" class="px-4 py-5 sm:p-6">
  <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
    
    <div class="sm:col-span-1">
      <dt class="text-sm font-medium text-gray-500">Patient</dt>
      <dd class="mt-1 text-sm text-gray-900 font-semibold">
        <%= appointment.patient.full_name %>
      </dd>
    </div>

    <div class="sm:col-span-1">
      <dt class="text-sm font-medium text-gray-500">Provider</dt>
      <dd class="mt-1 text-sm text-gray-900">
        Dr. <%= appointment.provider.full_name %>
      </dd>
    </div>

    <div class="sm:col-span-1">
      <dt class="text-sm font-medium text-gray-500">Time</dt>
      <dd class="mt-1 text-sm text-gray-900">
        <%= appointment.start_time&.strftime("%l:%M %p") %> - <%= appointment.end_time&.strftime("%l:%M %p") %>
      </dd>
    </div>

    <div class="sm:col-span-1">
      <dt class="text-sm font-medium text-gray-500">Status</dt>
      <dd class="mt-1 text-sm text-gray-900">
        <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
          <%= appointment.status.humanize %>
        </span>
      </dd>
    </div>

    <div class="sm:col-span-2">
      <dt class="text-sm font-medium text-gray-500">Reason for Visit</dt>
      <dd class="mt-1 text-sm text-gray-900">
        <%= appointment.reason %>
      </dd>
    </div>

  </dl>
</div>