<% content_for :title, "Appointment Details" %>

<div class="max-w-3xl mx-auto px-4 py-8">
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
        Appointment Details
      </h2>
      <p class="mt-1 text-sm text-gray-500">
        <%= @appointment.start_time.strftime("%A, %B %d, %Y") %>
      </p>
    </div>
    
    <div class="mt-4 flex flex-shrink-0 md:ml-4 md:mt-0 gap-3">
      <%= link_to "Back to Schedule", appointments_path(slug: @current_organization.slug), class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
      
      <%= link_to "Edit", edit_appointment_path(slug: @current_organization.slug, id: @appointment.id), class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
    </div>
  </div>

  <div class="bg-white shadow sm:rounded-lg border border-gray-200 overflow-hidden">
    <%= render partial: "appointments/appointment", locals: { appointment: @appointment } %>
  </div>

  <div class="mt-8 flex justify-end">
    <%= button_to "Cancel Appointment", appointment_path(slug: @current_organization.slug, id: @appointment.id), 
        method: :delete, 
        class: "text-sm text-red-600 hover:text-red-900 font-medium",
        data: { turbo_confirm: "Are you sure? This will remove the appointment." } 
    %>
  </div>
</div>