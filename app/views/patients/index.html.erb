<% content_for :title, "Patients" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-3xl">Patient Directory</h1>
    <%= link_to "New Patient", new_patient_path(slug: @current_organization.slug), 
      class: "rounded-md px-3.5 py-2.5 bg-indigo-600 hover:bg-indigo-500 text-white block font-medium" 
    %>
  </div>

  <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-300">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Name</th>
          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">DOB (Age)</th>
          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Gender</th>
          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Contact</th>
          <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
            <span class="sr-only">Actions</span>
          </th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 bg-white">
        <% @patients.each do |patient| %>
          <tr>
            <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
              <%= patient.last_name %>, <%= patient.first_name %>
            </td>
            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
              <%= patient.date_of_birth.strftime("%m/%d/%Y") %> 
              <span class="text-xs text-gray-400">(<%= time_ago_in_words(patient.date_of_birth) %>)</span>
            </td>
            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
              <%= patient.gender %>
            </td>
            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
              <div><%= patient.phone %></div>
              <div class="text-xs"><%= patient.email %></div>
            </td>
            <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
              <%= link_to "History", patient_encounters_path(slug: @current_organization.slug, 
                patient_id: patient.id), 
                class: "text-blue-600 hover:text-blue-900 font-bold mr-4" 
              %>
              
              <%= link_to "View", patient_path(patient, slug: @current_organization.slug), 
                class: "text-indigo-600 hover:text-indigo-900 mr-4" 
              %>
              <%= link_to "Edit", edit_patient_path(patient, slug: @current_organization.slug), 
                class: "text-gray-600 hover:text-gray-900" 
              %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% if @patients.empty? %>
      <div class="text-center py-10 text-gray-500 italic">
        No patients found. Click "New Patient" to add one.
      </div>
    <% end %>
  </div>
</div>