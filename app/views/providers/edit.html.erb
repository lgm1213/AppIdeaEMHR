<div class="max-w-2xl mx-auto py-10">
  <div class="mb-8 border-b border-gray-200 pb-5">
    <h3 class="text-2xl font-bold leading-6 text-gray-900">Edit Provider Details</h3>
    <p class="mt-2 text-sm text-gray-500">Update login information or medical credentials.</p>
  </div>

  <%# Notice we point to provider_path (update action) but use the @user model %>
  <%= form_with(model: @user, url: provider_path(@provider, slug: @current_organization.slug), method: :patch, class: "space-y-8") do |form| %>
    
    <%# --- PASTE THE SAME FORM FIELDS FROM new.html.erb HERE --- %>
    
    <div class="bg-white p-6 shadow sm:rounded-lg border border-gray-200">
      <h4 class="text-base font-semibold text-gray-900 mb-4">Login Credentials</h4>
      <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-3">
          <%= form.label :first_name, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <%= form.text_field :first_name, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm" %>
        </div>
        <div class="sm:col-span-3">
          <%= form.label :last_name, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <%= form.text_field :last_name, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm" %>
        </div>
         <div class="sm:col-span-6">
          <%= form.label :email_address, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <%= form.text_field :email_address, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm" %>
        </div>
      </div>
    </div>

    <div class="bg-indigo-50 p-6 shadow sm:rounded-lg border border-indigo-100">
      <h4 class="text-base font-semibold text-indigo-900 mb-4">Clinical Credentials</h4>
      <%= form.fields_for :provider do |pf| %>
        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <div class="sm:col-span-3">
            <%= pf.label :npi, "NPI Number", class: "block text-sm font-medium leading-6 text-gray-900" %>
            <%= pf.text_field :npi, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm" %>
          </div>
          <div class="sm:col-span-3">
             <%= pf.label :specialty, class: "block text-sm font-medium leading-6 text-gray-900" %>
             <%= pf.select :specialty, ["Family Medicine", "Internal Medicine", "Pediatrics", "Cardiology"], {}, class: "mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm" %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="flex items-center justify-end gap-x-6">
      <%= link_to "Cancel", providers_path(slug: @current_organization.slug), class: "text-sm font-semibold leading-6 text-gray-900" %>
      <%= form.submit "Update Provider", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  <% end %>
</div>